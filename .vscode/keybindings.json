[
  // Sidebar shorctuts:
  // Cmd+K, Cmd+E: Explorer
  // Cmd+K, Cmd+V: Version Control (Git)
  // Cmd+K, Cmd+D: Debug
  // Cmd+K, Cmd+X: Extensions
  { "key": "cmd+k cmd+e", "command": "workbench.view.explorer" },
  { "key": "cmd+k cmd+v", "command": "workbench.view.scm" },
  { "key": "cmd+k cmd+d", "command": "workbench.view.debug" },
  { "key": "cmd+k cmd+x", "command": "workbench.extensions.action.showInstalledExtensions" },

  // File Explorer shortcuts:
  // Cmd+D: Duplicate file
  // Cmd+N: Create file
  // Cmd+Shift+N: Create folder
  // Cmd+R: Refresh
  { "key": "cmd+d", "command": "duplicate.execute", "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus" },
  { "key": "cmd+n", "command": "explorer.newFile", "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus" },
  { "key": "shift+cmd+n", "command": "explorer.newFolder", "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus" },
  { "key": "cmd+r", "command": "workbench.files.action.refreshFilesExplorer", "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus" },

  // Terminal navigation:
  { "key": "ctrl+;", "command": "workbench.panel.terminal.focus", "when": "!terminalFocus" },
  { "key": "ctrl+;", "command": "workbench.action.focusActiveEditorGroup", "when": "terminalFocus" },

  // Select previous editor by default on Cmd+p
  { "key": "cmd+p", "command": "workbench.action.quickOpenPreviousEditor" },

  // Cmd+K, Cmd+F: Open this keybindings file
  { "key": "cmd+k cmd+f", "command": "workbench.action.openGlobalKeybindingsFile" }
]

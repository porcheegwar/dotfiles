[
  // Pane navigation
  { "key": "ctrl+h", "command": "workbench.action.previousEditor", "when": "editorTextFocus" },
  { "key": "ctrl+l", "command": "workbench.action.nextEditor", "when": "editorTextFocus" },
  { "key": "ctrl+shift+h", "command": "workbench.action.focusPreviousGroup", "when": "editorTextFocus" },
  { "key": "ctrl+shift+l", "command": "workbench.action.focusNextGroup", "when": "editorTextFocus" },

  // Integrated terminal navigation
  { "key": "ctrl+h", "command": "workbench.action.terminal.focusPreviousPane", "when": "terminalFocus" },
  { "key": "ctrl+j", "command": "workbench.action.terminal.focus", "when": "!terminalFocus" },
  { "key": "ctrl+k", "command": "workbench.action.focusActiveEditorGroup", "when": "terminalFocus" },
  { "key": "ctrl+l", "command": "workbench.action.terminal.focusNextPane", "when": "terminalFocus" },
  // Clear terminal with Cmd+L since Ctrl+L is not available
  { "key": "cmd+l", "command": "workbench.action.terminal.clear", "when": "terminalFocus" },

  // Inspect syntax highlgighting scopes
  { "key": "ctrl+shift+s", "command": "editor.action.inspectTMScopes", "when": "editorTextFocus" },

  // Move lines up and down
  { "key": "alt+j", "command": "editor.action.moveLinesDownAction"},
  { "key": "alt+k", "command": "editor.action.moveLinesUpAction" },

  // Open this keybindings file
  { "key": "cmd+k cmd+f", "command": "workbench.action.openGlobalKeybindingsFile" },

  // Parameter hints
  { "key": "ctrl+;", "command": "editor.action.triggerParameterHints", "when": "editorHasSignatureHelpProvider && !parameterHintsVisible && editorTextFocus" },
  { "key": "ctrl+;", "command": "closeParameterHints", "when": "parameterHintsVisible" },
  { "key": "ctrl+j", "command": "showNextParameterHint", "when": "parameterHintsVisible" },
  { "key": "ctrl+k", "command": "showPrevParameterHint", "when": "parameterHintsVisible" },

  // Open contextual menu
  { "key": "ctrl+.", "command": "editor.action.showContextMenu" },

  // PhpUnit
  { "key": "cmd+t", "command": "better-phpunit.run" },
  { "key": "cmd+l", "command": "better-phpunit.run-previous", "when": "!terminalFocus" },
  { "key": "cmd+shift+t", "command": "better-phpunit.run-suite" },
  { "key": "cmd+t", "command": "-workbench.action.showAllSymbols" },
]

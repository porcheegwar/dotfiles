{
    // Appearance
    "explorer.openEditors.visible": 0,
    "breadcrumbs.enabled": false,
    "workbench.editor.showTabs": true,

    // Behaviour
    "workbench.startupEditor": "none",
    "workbench.settings.editor": "json",

    // File ignores
    "files.exclude": {
        // Version Control
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        // NodeJS
        "**/node_modules/": true,
        // Elixir
        "**/dist/": true,
        "**/_build/": true,
        "**/deps/": true,
        "**/.elixir_ls/": true,
        // Python
        "**/__pycache__/": true,
        "**/*.picklecache": true,
    },
}